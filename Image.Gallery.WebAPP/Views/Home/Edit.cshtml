@model Image
@{
    ViewData["Title"] = "Edit Image";
}

<style>
    /* ... (your existing styles) ... */
    .edit-container {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
    }

    button {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    }

    .image-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .image-item {
        margin: 10px;
        text-align: center;
        width: 200px;
    }

        .image-item img {
            max-width: 100%;
            height: auto;
        }
</style>

<div class="edit-container">
    <h2>Edit Image</h2>
    <img src="data:image/png;base64,@(Convert.ToBase64String(Model.Content))" asp-route-id="@Model.Id" alt="@Model.Title" />
    <form asp-action="UpdateImage" asp-controller="Api" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" asp-for="Title" required />

        <label for="description">Description:</label>
        <textarea id="description" name="description" asp-for="Description"></textarea>

        <button type="submit">Update</button>
    </form>
</div>